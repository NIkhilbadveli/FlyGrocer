<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Filter"
                android:drawableStart="@drawable/ic_baseline_filter_list_24"
                android:padding="@dimen/defalutPadding"
                android:layout_margin="@dimen/defalutMargin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price - High to Low"
                android:drawableStart="@drawable/ic_baseline_sort_24"
                android:padding="@dimen/defalutPadding"
                android:layout_margin="@dimen/defalutMargin"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_format_list_bulleted_24"
                android:padding="@dimen/defalutPadding"
                android:layout_margin="@dimen/defalutMargin"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/grocerChoice"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_container">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Super Grocer"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher"
            android:padding="@dimen/defalutPadding" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Green Grocer"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher"
            android:padding="@dimen/defalutPadding"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Food Grocer"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher"
            android:padding="@dimen/defalutPadding" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductList"
        android:layout_below="@id/grocerChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:listitem="@layout/item_product"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Product List"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_baseline_camera_alt_24"
        android:drawablePadding="@dimen/defalutPadding"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/defalutMargin"/>
</RelativeLayout>

