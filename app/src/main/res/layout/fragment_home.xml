<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"
        android:layout_margin="@dimen/defalutPadding"
        android:queryHint="Search for products, brands and more"
        android:iconifiedByDefault="false"
        android:background="@drawable/thin_border"
        style="@style/SearchbarStyle"/>

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:id="@+id/bannerSlider"
        app:corner_radius="10"
        app:auto_cycle="true"
        app:delay="4"
        app:period="1000"
        android:layout_margin="@dimen/defalutPadding">
    </com.denzcoskun.imageslider.ImageSlider>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.58"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/superGrocerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:layout_margin="@dimen/defalutPadding"
            app:cardCornerRadius="8sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120sp"
                android:layout_weight="0.6"
                android:src="@drawable/supergrocer" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Super Grocer"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/greenGrocerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:layout_margin="@dimen/defalutPadding"
            app:cardCornerRadius="8sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120sp"
                    android:layout_weight="0.6"
                    android:src="@drawable/greengrocer" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Green Grocer"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/foodGrocerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:layout_margin="@dimen/defalutPadding"
            app:cardCornerRadius="8sp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120sp"
                    android:layout_weight="0.6"
                    android:src="@drawable/foodgrocer" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Food Grocer"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.06"
        android:text="Upload Product List"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_baseline_camera_alt_24"
        android:drawablePadding="@dimen/defalutPadding"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/defalutPadding"/>
</LinearLayout>