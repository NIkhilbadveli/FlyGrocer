<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:elevation="20dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="My Earnings : "
                android:textAlignment="center"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/tvPointsRupees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0 Points = â‚¹ 0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:padding="40dp"
        android:src="@drawable/enjoy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Invite Your friends to get 500 Points"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#252525"
        android:fontFamily="sans-serif-black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Invite Your friends on Flygrocer and after they join, both of you will get 500 points which can used as coupons in your cart"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="#9b9b9b"
        android:padding="13dp"
        android:fontFamily="sans-serif">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Tap on invitation code to copy"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#252525"
        android:padding="13dp"
        android:fontFamily="sans-serif">
    </TextView>

    <TextView
        android:id="@+id/tvReferralCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="RIKEPRO"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#252525"
        android:padding="13dp"
        android:fontFamily="sans-serif-black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="or invite using"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#252525"
        android:padding="13dp"
        android:fontFamily="sans-serif"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/fbIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/facebook"
            android:layout_marginEnd="20dp"
            >
        </ImageView>
        <ImageView
            android:id="@+id/whatsAppIcon"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/whatsapp"
            android:layout_marginEnd="20dp"
            >
        </ImageView>
        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:src="@drawable/share"
            >
        </ImageView>
    </LinearLayout>
</LinearLayout>