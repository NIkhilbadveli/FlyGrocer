<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/defalutPadding"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/defalutMargin"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#PDTR00001"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27-5-2020"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/grey"
                    />
                <TextView
                    android:id="@+id/tvOrderQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvDummy"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="15sp"
                    android:textColor="@color/grey"
                    android:layout_toStartOf="@id/tvOrderTotal"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:id="@+id/tvOrderTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9 120"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
            </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp">
               <Button
                   android:id="@+id/orderDetailsButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Details"
                   android:layout_centerVertical="true"
                   android:background="@drawable/thin_border"
                   android:layout_marginStart="10dp"/>
               <TextView
                   android:id="@+id/tvOrderStatus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:text="Delivered"
                   android:textSize="20sp"
                   android:layout_centerVertical="true"
                   android:textColor="@color/green"
                   android:layout_marginEnd="20dp"
                   />

           </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>